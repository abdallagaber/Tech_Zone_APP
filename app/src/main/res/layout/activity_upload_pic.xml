<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/white_abstract_wallpaper_23_2148830026"
    android:padding="15dp"
    tools:context=".UploadPic">
        <TextView
            android:id="@+id/text_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Upload your picture"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/choose_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_upload"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_button_background"
            android:fontFamily="serif"
            android:text="Choose a picture"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/prof_view"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/choose_btn"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/upload"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prof_view"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_button_background"
            android:fontFamily="serif"
            android:text="Upload Picture"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="2dp"
            android:indeterminateTint="@color/black"
            android:visibility="gone"/>
</RelativeLayout>