<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart"
    android:background="@drawable/white_abstract_wallpaper_23_2148830026">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/tech_zone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartLap"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="156dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/bottomNavigationView">

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="false"
            android:gravity="center"
            android:text="Total Price : "
            android:textSize="24sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/checkout"
            android:layout_width="173dp"
            android:layout_height="50dp"
            android:layout_below="@id/totalPrice"
            android:layout_centerHorizontal="true"
            android:background="@drawable/orange_button_background"
            android:text="Check Out"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />



    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottem_nav_background"
        app:itemIconTint="#ED9411"
        app:itemRippleColor="#ED9411"
        app:itemTextColor="#ED9411"
        app:menu="@menu/bottem_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>