<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@drawable/tech_zone" />
        <ImageView
            android:id="@+id/no_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/no_profile"
            android:layout_below="@+id/logo"/>

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_below="@+id/no_profile_image"
            android:background="@drawable/profile_icon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/icon_profile"
            android:layout_marginStart="50dp"
            android:hint="Loading"
            android:textSize="20sp"
            android:layout_below="@+id/no_profile_image"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/name"
            android:layout_marginTop="15dp"
            android:background="@android:color/black" />


        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_below="@id/name"
            android:layout_marginTop="33dp"
            android:background="@drawable/email_icon" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_alignStart="@id/icon_email"
            android:layout_marginStart="50dp"
            android:layout_marginTop="37dp"
            android:hint="Loading"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/email"
            android:layout_marginTop="25dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/icon_birth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/email"
            android:layout_marginTop="44dp"
            android:background="@drawable/birth_icon" />

        <TextView
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_alignStart="@id/icon_birth"
            android:layout_marginStart="53dp"
            android:layout_marginTop="43dp"
            android:hint="Loading"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/birth"
            android:layout_marginTop="30dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/mobile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/birth"
            android:layout_marginTop="44dp"
            android:background="@drawable/icone_mobile" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/birth"
            android:layout_alignStart="@id/mobile_icon"
            android:layout_marginStart="56dp"
            android:layout_marginTop="48dp"
            android:hint="Loading"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mobile"
            android:layout_marginTop="30dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/mobile"
            android:layout_marginTop="44dp"
            android:background="@drawable/icon_address" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobile"
            android:layout_alignStart="@id/address_icon"
            android:layout_marginStart="56dp"
            android:layout_marginTop="48dp"
            android:hint="Loading"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/address"
            android:layout_marginTop="30dp"
            android:background="@android:color/black" />


        <Button
            android:id="@+id/signOutButton"
            android:layout_width="173dp"
            android:layout_height="52dp"
            android:layout_below="@id/address"
            android:layout_centerInParent="true"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/orange_button_background"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
             />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bottem_nav_background"
        app:itemIconTint="#ED9411"
        app:itemRippleColor="#ED9411"
        app:itemTextColor="#ED9411"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottem_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>